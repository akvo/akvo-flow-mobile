<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Flow.PopupMenuListView" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/black_transparent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="Flow.ListView" parent="@style/Widget.AppCompat.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/white</item>
    </style>

    <style name="button_primary">
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/button_primary_text</item>
    </style>

    <style name="button_secondary">
        <item name="android:background">@drawable/button_secondary</item>
        <item name="android:textColor">@color/button_secondary_text</item>
    </style>

    <style name="button_tertiary">
        <item name="android:background">@drawable/button_tertiary</item>
        <item name="android:textColor">@color/button_tertiary_text</item>
    </style>

    <style name="Spinner">
        <!-- Color when pressed -->
        <item name="colorAccent">@color/black_disabled</item>
        <!-- Default color for the dropdown arrow and line -->
        <item name="colorControlNormal">@color/black_disabled</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="android:background">@drawable/image_button_background</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.Tabs" parent="TextAppearance.Design.Tab">
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="FlowAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="FlowAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/SearchView</item>
    </style>

    <style name="LinkTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_color_links</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SearchView" parent="Widget.AppCompat.Light.SearchView">
        <item name="searchHintIcon">@null</item>
        <item name="searchIcon">@null</item>
        <item name="suggestionRowLayout">@layout/search_suggestion_row</item>
    </style>

</resources>
