<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="org.akvo.flow.activity.MapActivity">

    <include layout="@layout/app_bar_layout"/>

    <ScrollView
            android:id="@id/android:list"
            android:layout_marginTop="?actionBarSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/listitem_row_2"
                    android:gravity="center_vertical">

                <CheckBox
                        android:id="@+id/screenoptcheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:saveEnabled="false"/>

                <TextView
                        android:id="@+id/screenopttxt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/screenoptcheckbox"
                        android:layout_toStartOf="@id/screenoptcheckbox"
                        android:text="@string/screenoptlabel"
                        android:textSize="20sp"/>

                <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/screenopttxt"
                        android:layout_toLeftOf="@id/screenoptcheckbox"
                        android:layout_toStartOf="@id/screenoptcheckbox"
                        android:text="@string/screenoptdesc"
                        android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/listitem_row_1"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                <CheckBox
                        android:id="@+id/uploadoptioncheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:saveEnabled="false"/>


                <TextView
                        android:id="@+id/uploadoptionlabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@id/uploadoptioncheckbox"
                        android:layout_toStartOf="@id/uploadoptioncheckbox"
                        android:layout_centerVertical="true"
                        android:text="@string/uploadoptionlabel"
                        android:textSize="20sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/pref_locale"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/listitem_row_2"
                    android:padding="8dp"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/locale_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center_vertical"
                        android:textSize="20sp"
                        android:text="@string/app_language"/>

                <TextView
                        android:id="@+id/locale_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/locale_label"
                        android:gravity="center_vertical"
                        android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/pref_server"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/listitem_row_1"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/serverlabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/preference_dashboard_url_description"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/servervalue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/serverlabel"
                        android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/pref_deviceid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/listitem_row_2"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/identlabel"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/identlabel"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/identvalue"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/identlabel"
                        android:textSize="14sp"/>
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/pref_resize"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@drawable/listitem_row_1"
                    android:gravity="center_vertical">

                <TextView
                        android:id="@+id/max_img_size_title"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:text="@string/resize_large_images"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/max_img_size_txt"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/max_img_size_title"
                        android:textSize="16sp"/>
            </RelativeLayout>
        </LinearLayout>

    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
